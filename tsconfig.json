{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strict": true,
        "target": "ESNext",
        "outDir": "lib",
        "removeComments": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*"
    ]
}